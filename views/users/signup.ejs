<% layout("/layouts/boilerplate") -%>

    <div class="row mt-3">
        <h2 class="col-6 offset-3">SignUp on wandarlust</h2>
        <div class="col-6 offset-3">
            <form action="/signup" method="post" class="needs-validation" novalidate>
                <div class=" mb-3">
                    <label for="username" class="form-label">Username</label>
                    <input type="text" name="username" id="username" class="form-control" required>
                    <div class="valid-feedback"> Looks good!</div>
                </div>
                <!-- <div class=" mb-3">
                    <label for="mobile" class="form-label">Email</label>
                    <input type="number" name="mobile" id="mobile" placeholder="+91 1111 2222 22" class="form-control" required>
                </div> -->
                <div class=" mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" name="email" id="email" placeholder="wandarlust@gmail.com" class="form-control" required>
                </div>
                <div class=" mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" name="password" id="password" class="form-control" required>
                </div>
                <button class="btn btn-success">SignUp</button>
            </form>
        </div>
        
    </div>


    